@model Vape.CMS.DAL.DTO.RegisterDto
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="../assets/img/apple-icon.png" />
    <link rel="icon" type="image/png" href="../assets/img/favicon.png" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>Online Store - @ViewBag.Title</title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />



    <!--HARDUS-->
    <!-- Bootstrap core CSS     -->
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" />
    <!--  Material Dashboard CSS    -->
    <link href="~/assets/css/material-dashboard.css?v=1.2.0" rel="stylesheet" />
    <!--     Fonts and icons     -->
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,700,300|Material+Icons' rel='stylesheet' type='text/css'>


    <link href="~/assets/css/Auth.css" rel="stylesheet" />

</head>
<body>
    <div class="wrapper">
        <div class="outer">
            <div class="middle">
                <div class="inner">
                    <div class="col-md-4 col-md-offset-4">
                        @using (Html.BeginForm("Validate", "Auth", FormMethod.Post))
                        {
                            <div class="card">
                                <div class="card-header" data-background-color="purple">
                                    <h4 class="title">Register</h4>
                                    <p class="category">Welcome</p>
                                </div>
                                <div class="card-content">
                                    <form>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group label-floating is-empty">
                                                    <label>@Html.LabelFor(model => model.Name, new { @class = "control-label" })</label>
                                                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", type = "text" })
                                                    <span class="material-input"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group label-floating is-empty">
                                                    <label>@Html.LabelFor(model => model.Surname, new { @class = "control-label" })</label>
                                                    @Html.TextBoxFor(model => model.Surname, new { @class = "form-control", type = "text" })
                                                    <span class="material-input"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group label-floating is-empty">
                                                    <label>@Html.LabelFor(model => model.CellNumber, new { @class = "control-label" })</label>
                                                    @Html.TextBoxFor(model => model.CellNumber, new { @class = "form-control", type = "text" })
                                                    <span class="material-input"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group label-floating is-empty">
                                                    <label>@Html.LabelFor(model => model.Email, new { @class = "control-label" })</label>
                                                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", type = "email" })
                                                    <span class="material-input"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group label-floating is-empty">
                                                    <label>@Html.LabelFor(model => model.Password, new { @class = "control-label" })</label>
                                                    @Html.TextBoxFor(model => model.Password, new { @class = "form-control", type = "password" })
                                                    <span class="material-input"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-primary pull-right">Register</button>
                                        <div class="clearfix"></div>
                                    </form>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

<!--HARDUS-->
